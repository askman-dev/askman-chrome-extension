{
  "name": "askman-chrome-extension",
  "version": "0.0.18",
  "description": "Ask anything about the web page you are on",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/askman-dev/askman-chrome-extension.git"
  },
  "scripts": {
    "validate:chrome": "node scripts/validate-chrome-extension.js",
    "build": "pnpm validate:chrome && tsc --project tsconfig.json --noEmit && vite build",
    "build:firefox": "pnpm validate:chrome && tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "test": "vitest",
    "commitlint": "commitlint --edit",
    "lint": "eslint \"src/**/*.{ts,js,tsx,jsx}\"",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write",
    "prepare": "husky install"
  },
  "type": "module",
  "dependencies": {
    "@ai-sdk/openai": "^2.0.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.1.1",
    "@iarna/toml": "^2.2.5",
    "@langchain/community": "^0.3.11",
    "@langchain/core": "^0.3.17",
    "@langchain/openai": "^0.3.12",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@shikijs/core": "^1.15.1",
    "@shikijs/monaco": "^1.15.1",
    "@types/prop-types": "^15.7.12",
    "ahooks": "^3.7.9",
    "ai": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "construct-style-sheets-polyfill": "3.1.0",
    "dom-types": "^1.1.2",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.9.0",
    "loglevel": "^1.9.2",
    "lucide-react": "^0.544.0",
    "monaco-editor": "^0.51.0",
    "monaco-editor-core": "^0.51.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-highlight": "^0.15.0",
    "react-textarea-autosize": "^8.5.9",
    "react-zoom-pan-pinch": "^3.7.0",
    "shiki": "^1.15.1",
    "smol-toml": "^1.1.4",
    "tailwind-merge": "^3.3.1",
    "tailwind-scrollbar": "^4.0.2",
    "webextension-polyfill": "0.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "18.1.0",
    "@rollup/plugin-typescript": "11.1.5",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "^14.6.0",
    "@types/chrome": "^0.1.9",
    "@types/node": "22.8.7",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.18",
    "@types/ws": "8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "5.0.2",
    "@vitest/coverage-v8": "^3.0.1",
    "autoprefixer": "^10.4.21",
    "chokidar": "3.5.3",
    "cross-env": "7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "4.6.0",
    "fs-extra": "11.1.1",
    "globals": "^14.0.0",
    "husky": "8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "15.2.0",
    "npm-run-all": "4.1.5",
    "postcss": "^8.5.6",
    "prettier": "3.1.0",
    "rollup": "4.50.1",
    "sass": "1.83.4",
    "tailwindcss": "^4.1.11",
    "ts-loader": "9.5.0",
    "tslib": "2.6.2",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vite-plugin-static-copy": "^1.0.6",
    "vite-plugin-toml": "^0.7.0",
    "vite-plugin-zip-pack": "^1.2.4",
    "vitest": "^3.0.1",
    "ws": "^8.18.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --debug"
    ]
  },
  "packageManager": "pnpm@9.5.0"
}
